{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "target": "es5",
        "outDir": "dist",
        "lib": [
            "es2020",
            "dom",
            "scripthost"
        ],
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "downlevelIteration": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules"
    ],
    "typeRoots": [
        "./node_modules/phaser/types"
    ],
    "types": [
        "Phaser"
    ]
}
